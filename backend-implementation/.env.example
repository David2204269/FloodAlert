# Environment Configuration for Backend

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/flood_alert
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/flood_alert?retryWrites=true&w=majority

# Cache Configuration
REDIS_URL=redis://localhost:6379
# For Redis Cloud:
# REDIS_URL=redis://default:password@host:port

# API Configuration
API_KEY_SECRET=sk_dev_replace_with_secure_key
ADMIN_KEY=admin_dev_key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Features
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=webhook_secret_key

# Alert Configuration
ALERT_DEDUP_WINDOW=300
ALERT_ESCALATION_ENABLED=true

# Retention Policy
DATA_RETENTION_DAYS=90
ALERT_RETENTION_DAYS=180

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_PHONE_NUMBER=+1234567890
